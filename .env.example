# Database
DATABASE_URL="postgresql://user:password@localhost:5432/pc_parts_db?schema=public"

# Application
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# NextAuth Authentication
# Generate a secret key with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Email Configuration (for verification emails)
# For Gmail: Enable 2FA and generate an App Password
# For other providers: Use your SMTP credentials
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-specific-password"
EMAIL_FROM="noreply@pcbuilder.com"

# Scraping Configuration
SCRAPER_TIMEOUT=30000
SCRAPER_MAX_RETRIES=3
SCRAPER_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"

# Retailer-specific scraping limits (0 or -1 for unlimited)
BERMOR_MAX_PAGES=50

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Cron Job Secret (for Vercel Cron)
CRON_SECRET="your-secret-key-here"

# Logging
LOG_LEVEL="info"
